<div class="container">
  <h1 class="title" align="center">My Work</h1>
  <br>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6" align="center" style="padding: 0rem 2rem 1rem 2rem;">
        <div class="preview">
          <h2 align="left">
            <%= link_to project.title, project, :class=>'post-link'%>
          </h2>
          <h5 align="left" style="min-height: 3rem;">
            <%= project.description %>
          </h5>
          <div>
            <%= link_to image_tag(project.screenshot.url(:medium), :class=>"img-responsive image-clip"), project %>
          </div><br>
          <h4 align="center">
            <%= link_to "View Demo", "http://#{project.url}", target: :_blank, :class=>"button" %>
            <%= link_to "View Github", "https://#{project.github_url}", target: :_blank, :class=>"button" %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
