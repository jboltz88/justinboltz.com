<div class="container">
  <h1 class="title" align="center">My Blog Posts</h1>
  <br>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6" align="center" style="padding: 0rem 5rem 1rem 5rem;">
        <h2 align="left">
          <%= link_to project.title, project, :class=>'post-link'%>
        </h2>
        <h5 align="left">
          <%= project.description %>
        </h5>
        <h4 align="left">
          Demo: <%= link_to project.url, "http://#{project.url}" %>
        </h4>
      </div>
    <% end %>
  </div>
</div>
