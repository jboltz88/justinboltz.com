<div class="container">
  <h1 class="title" align="center">My Blog Posts</h1>
  <br>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6" align="center" style="padding: 0rem 5rem 1rem 5rem;">
        <h3 align="left">
          <%= link_to post.title, post, :class=>'post-link'%>
        </h3>
        <h5 align="left">
          <%= post.date %>
        </h5>
        <h4 align="left">
          <%= truncate(post.body, length: 200, separator: ' ') %>
        </h4>
      </div>
    <% end %>
  </div>
</div>
